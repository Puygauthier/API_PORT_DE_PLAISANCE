extends layout

block content
  h1 Gestion des utilisateurs

  if users.length
    table.table
      thead
        tr
          th Email
          th Actions
      tbody
        each user in users
          tr
            td #{user.email}
            td
              a(href="/users/#{user.email}" class="button") Détails
              form(method="POST", action="/users/#{user.email}?_method=DELETE", style="display:inline; margin-left:10px;")
                button(type="submit") Supprimer
  else
    p Aucun utilisateur trouvé.

  h2 Ajouter un utilisateur
  form(method="POST", action="/users")
    input(type="email", name="email", required, placeholder="Email")
    input(type="password", name="password", required, placeholder="Mot de passe")
    button(type="submit") Créer
