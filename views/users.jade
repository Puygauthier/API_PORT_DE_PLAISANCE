extends layout

block content
  h1 Gestion des utilisateurs

  if users.length
    table
      thead
        tr
          th Email
          th Actions
      tbody
        each user in users
          tr
            td #{user.email}
            td
              a(href=`/users/${user.email}`) Détails
              form(method="POST", action=`/users/${user.email}?_method=DELETE`, style="display:inline; margin-left:10px;")
                button(type="submit") Supprimer

  h2 Ajouter un utilisateur
  form(method="POST", action="/users")
    input.input-field(type="email", name="email", required, placeholder="Email")
    br
    input.input-field(type="password", name="password", required, placeholder="Mot de passe")
    br
    button(type="submit", class="blue-button") Créer
