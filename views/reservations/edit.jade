extends ../layout

block content
  h1 Modifier réservation

  form(method='POST', action=`/catways/${catwayId}/reservations/${reservation._id}/update`)
    div
      label(for='client') Client :
      input(type='text', name='client', id='client', value=reservation.client, required)
    div
      label(for='dateDebut') Date de début :
      input(type='date', name='dateDebut', id='dateDebut', value=reservation.dateDebut.toISOString().split('T')[0], required)
    div
      label(for='dateFin') Date de fin :
      input(type='date', name='dateFin', id='dateFin', value=reservation.dateFin.toISOString().split('T')[0], required)
    button(type='submit') Mettre à jour
